{
    "private": true,
    "name": "my-dropin",
    "version": "0.1.0",
    "license": "MIT",
    "engines": {
        "node": ">=18"
    },
    "files": [
        "*"
    ],
    "sideEffects": false,
    "scripts": {
        "dev": "concurrently 'npm run storybook' 'npm run serve'",
        "storybook": "elsie storybook",
        "serve": "concurrently 'elsie serve --mode=development' 'wait-on tcp:${PORT:=3002} && http-server ./examples/html-host -c-1 -p 3000 -d -o'",
        "lint": "elsie lint --max-warnings=0",
        "test": "elsie test",
        "build": "elsie build",
        "analyze": "ANALYZE=true elsie build"
    },
    "dependencies": {
        "@adobe/elsie": "latest",
        "@adobe/event-bus": "latest",
        "@adobe/fetch-graphql": "latest",
        "@adobe/storefront-design": "latest",
        "preact": "^10.3.2"
    },
    "devDependencies": {
        "concurrently": "^8.0.1",
        "http-server": "14.1.1",
        "jest": "^27.0.1",
        "wait-on": "^7.0.1"
    }
}
